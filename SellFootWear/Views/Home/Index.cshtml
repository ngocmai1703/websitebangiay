<!-- end product Area -->
<!-- Start exclusive deal Area -->
<section class="exclusive-deal-area">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 no-padding exclusive-left">
                <div class="row clock_sec clockdiv" id="clockdiv">
                    <div class="col-lg-12">
                        <h1>Ưu đãi độc quyền sẽ sớm kết thúc!</h1>
                        <p>Who are in extremely love with eco friendly system.</p>
                    </div>
                    <div class="col-lg-12">
                        <div class="row clock-wrap">
                            <div class="col clockinner1 clockinner">
                                <h1 class="days">4</h1>
                                <span class="smalltext">Days</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="hours">23</h1>
                                <span class="smalltext">Hours</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="minutes">47</h1>
                                <span class="smalltext">Mins</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="seconds">59</h1>
                                <span class="smalltext">Secs</span>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="" class="primary-btn">Shop Now</a>
            </div>
            <div class="col-lg-6 no-padding exclusive-right">
                <div class="active-exclusive-product-slider">
                    <!-- single exclusive carousel -->
                    @foreach (var item in Model.Where(n=>n.Discount == true))
                    {
                        <div class="single-exclusive-slider">
                            <img class="img-fluid" src="~/Content/img/product/@item.image" alt="">
                            <div class="product-details">
                                <div class="price" style="margin-top:20px">
                                    <h6 style="color: #ffba01">@string.Format("{0:#,##0,0}", @item.pricediscount) VNĐ</h6>
                                    <h6 class="l-through">@string.Format("{0:#,##0,0}", @item.price) VNĐ</h6>
                                </div>
                                <h4>
                                    @item.NameProduct
                                </h4>
                                <div class="add-bag d-flex align-items-center justify-content-center">
                                    <a class="add-btn" href="@Url.Action("AddToCart","Cart", new { ms = item.pID, url = Request.Url.ToString() })"><span class="ti-bag"></span></a>
                                    <span class="add-text text-uppercase">Mua hàng</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End exclusive deal Area -->
