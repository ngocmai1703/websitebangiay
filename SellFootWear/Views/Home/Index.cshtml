                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <img class="img-fluid" src="~/Content/img/product/@item.image" alt="">
                            <div class="product-details">
                                <h6>
                                    @item.NameProduct
                                </h6>
                                <div class="price">
                                    <h6 style="color: #ffba01">@string.Format("{0:#,##0,0}", @item.price) VNĐ</h6>
