@model SellFootWear.Models.Order

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Invoice Print</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper" style="margin: 15px">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h4>
                        <i class="fas fa-globe"></i> Chi tiết đơn hàng
                        <small class="float-right">Ngày đặt: @Model.Orderday</small>
                    </h4>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col" style=" margin-top: 12px;">

                    <p> <b>Khách hàng:</b> @Model.Customer.CustomName<br></p>
                    <p><b>Địa chỉ:</b> @Model.Customer.Address<br></p>
                    <p><b>Số điện thoại:</b> @Model.Customer.PhoneNumber<br></p>
                    <p><b>Ngày sinh:</b> @Model.Customer.Daybirth<br></p>
                    <p> <b>Email:</b> @Model.Customer.Daybirth</p>
                </div>
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 0; }
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@(i+1)</td>
                                    <td>@item.Product.NameProduct</td>
                                    <td>@string.Format("{0:#,##0,0}", @item.price) VNĐ</td>
                                    <td>x @item.amount</td>
                                    <td>@string.Format("{0:#,##0,0}", @item.intomoney) VNĐ</td>
                                </tr>
                                i++;
                            }


                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">

                </div>
                <!-- /.col -->
                <div class="col-6">
                    <p class="lead">Tổng phí phải chịu</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Tổng phụ:</th>
                                <td>0 VNĐ</td>
                            </tr>
                            <tr>
                                <th>Shipping:</th>
                                <td>0 VNĐ</td>
                            </tr>
                            <tr>
                                <th>Tổng tiền:</th>
                                <td>@string.Format("{0:#,##0,0}", Model.value) VNĐ</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>